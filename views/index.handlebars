<div class="container mt-5">
  {{!-- search bar  --}}
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
  <div class="mx-auto d-flex justify-content-end">
    <div class="dropdown">
      <button class="btn btn-outline-info dropdown-toggle mr-5" type="button" id="dropdownMenuButton"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">排序方式</button>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/sort/rating">餐廳評分</a>
        <a class="dropdown-item" href="/sort/category">餐廳類別</a>
        <a class="dropdown-item" href="/sort/asc">A > Z (升冪)</a>
        <a class="dropdown-item" href="/sort/desc">Z > A (降冪)</a>
      </div>
    </div>
  </div>
</div>

{{!-- restaurant list --}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-11 col-10 mx-auto">
      <div class="card-columns ">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-2">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div>
                <div class="d-inline">
                  <a href="/restaurants/{{this.id}}/edit" class="btn btn-primary mt-2">編輯</a>
                </div>
                <div class="d-inline">
                  <a href="/restaurants/{{this.id}}" class="btn btn-primary mt-2">詳細資料</a>
                </div>
                <div class="d-inline">
                  <form action="/restaurants/{{this.id}}/delete?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger mt-2">刪除</button>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>