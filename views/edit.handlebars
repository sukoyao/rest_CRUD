<div class="container mt-4">
  <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">餐廳名稱:</label>
      <input class="col-6 mb-3" type="text" placeholder="餐廳名稱" name="name" value="{{restaurant.name}}" id="name">
    </div>
    <div class="form-group">
      <label for="category">餐廳類型:</label>
      <input class="col-6 mb-3" type="text" placeholder="餐廳類型" name="category" value="{{restaurant.category}}"
        id="category">
    </div>
    <div class="form-group">
      <label for="image">圖片網址:</label>
      <input class="col-6 mb-3" type="text" placeholder="圖片網址" name="image" value="{{restaurant.image}}" id="image">
    </div>
    <div class="form-group">
      <label for="phone">電話:</label>
      <input class="col-6 mb-3" type="text" placeholder="電話" name="phone" value="{{restaurant.phone}}" id="phone">
    </div>
    <div class="form-group">
      <label for="google_map">地圖網址:</label>
      <input class="col-6 mb-3" type="text" placeholder="Google地圖網址" name="google_map" value="{{restaurant.google_map}}"
        id="google_map">
    </div>
    <div class="form-group">
      <label for="location">地址:</label>
      <input class="col-6 mb-3" type="text" placeholder="地址" name="location" value="{{restaurant.location}}"
        id="location">
    </div>
    <div class="form-group">
      <label for="rating">評價:</label>
      <input class="col-6 mb-3" type="text" placeholder="請輸入數字" name="rating" value="{{restaurant.rating}}" id="rating">
    </div>
    <div class="form-group">
      <label for="description" class="mb-0 ">簡介:</label>
      <textarea name="description" id="description" rows="3" cols="60"
        class="d-block">{{restaurant.description}}</textarea>
    </div>

    <div class="row">
      <button class="btn btn-primary col-2 mt-3 mb-5" type="submit">修改</button>
      <span class="mt-3 ml-5"><a href="/" class="btn btn-primary">回首頁</a></span>
    </div>
  </form>
</div>